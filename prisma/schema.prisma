generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model untuk menyimpan data pengguna
model User {
  id            String   @id @default(cuid())
  walletAddress String   @unique // Alamat dompet pengguna
  privateKey    String   @unique // Private key pengguna (sebaiknya dienkripsi!)
  boxes         Box[] // Relasi ke model File
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Box {
  id                 String   @id @default(cuid())
  ownerWalletAddress String
  users              User     @relation(fields: [ownerWalletAddress], references: [walletAddress])
  password           String   @default("")
  files              File[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

// Model untuk menyimpan data file yang diunggah
model File {
  id        String   @id @default(cuid())
  title     String   @default("New File")
  rootHash  String   @unique // Hash unik dari file
  txHash    String   @unique // Hash transaksi blockchain
  boxId     String
  boxes     Box      @relation(fields: [boxId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
